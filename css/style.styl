*
  margin: 0
  padding: 0
  box-sizing: border-box

html
  text-align: center
  padding: 3rem
  font-family: sans-serif


body
  display: none


.logo
  display: inline-block
  margin-bottom: 3rem


figure
  height: 100px
  line-height: 100px
  color: white
  font-weight: bold


section

  margin-bottom: 30px

  &:nth-of-type(1)
    background: tomato
    figure
      background: darken(tomato, 10%)
      &:nth-child(1), &:nth-child(2), &:nth-child(3)
        margin-bottom: 30px
      figure
        background: darken(tomato, 20%)

  &:nth-of-type(2)
    background: dodgerblue
    figure
      background: darken(dodgerblue, 10%)

  &:nth-of-type(3)
    background: #7ba48d
    figure
      background: darken(#7ba48d, 10%)

  &:nth-of-type(4)
    background: #52a9b1
    figure
      background: darken(#52a9b1, 10%)
      height: auto
      line-height: 25px
      padding: 30px
      font-weight: 100
      overflow: hidden
      &:nth-child(1), &:nth-child(2), &:nth-child(3)
        margin-bottom: 30px
